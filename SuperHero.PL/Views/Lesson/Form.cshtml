@model LessonVM
@{
    ViewData["Title"] = $"{(ViewBag.Delete == "Delete" ? "Delete" : (ViewBag.ID != null ? "Edit" : "Add"))} Lesson";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}


<div class="card shadow-sm">

    <div class="card-header">
        <h3 class="card-title">@(ViewBag.Delete == "Delete" ? "Delete" : (ViewBag.ID != null ? "Edit" : "Add")) Lesson</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <a>@TempData["error"]</a>
                <div asp-validation-summary="All"></div>
                <form method="post" asp-controller="Lesson" enctype="multipart/form-data">
                    <div class="mb-5">
                        <div class="form-floating mb-2">
                            <input type="text" class="form-control" placeholder="Num" asp-for="Num" />
                            <label asp-for="Num"></label>
                        </div>
                        <span asp-validation-for="Num" class="text-danger"></span>
                    </div>
                    <div class="mb-5">
                        <div class="form-floating mb-2">
                            <input type="text" class="form-control" placeholder="Name" asp-for="Name" />
                            <label asp-for="Name"></label>
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>



                    @if (ViewBag.Delete != "Delete"){
                       
                         <br />
                        <label asp-for="videoName" class="file-upload">
                            <input asp-for="videoName" class="input" type="file" multiple accept="image/*, video/*" />
                            <span asp-for="video" class="file-upload_button">Choose Files</span>

                        </label>
                        <output class="file-upload_result"></output>

                         <br />
                        <select class="form-select" aria-label="Default select example" asp-for="CourseID" asp-items="(SelectList)ViewBag.courseList">
                        </select>
                    }
                    

                    <br />
                    @if (ViewBag.Delete == "Delete")
                    {
                        <center>
                            <button type="submit" class="btn btn-danger" onclick="functionConfirm(this)">
                                <i class="uil uil-exclamation-octagon"></i>  Delete
                            </button>

                            <a asp-action="GetAll" asp-controller="Lesson" class="btn btn-primary">return</a>
                        </center>
                    }
                    else
                    {
                        <center>
                            <button type="submit" class="btn btn-primary">
                                <i class="uil uil-check"></i>Save
                            </button>

                            <a asp-action="GetAll" asp-controller="Lesson" class="btn btn-danger">return</a>
                        </center>
                    }


                </form>
            </div>
        </div>
    </div>
</div>

@section CSS{
    <partial name="~/views/person/Partial/css.cshtml" />

}
    @section JqueryValidation{
    <partial name="~/views/person/Partial/Script.cshtml" />
}