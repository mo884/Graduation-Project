@model IEnumerable<RecorderVM>
@{
    ViewData["Title"] = "AllRecorder";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}


@section CSS{
    <partial name="~/views/person/Partial/css.cshtml" />
}
    <a class="btn1 third col-sm-3  me-2 js-friends" data-url="/City/Create" href="javascript:;"> &nbsp; &nbsp; &nbsp;<i class="uil uil-create-dashboard "></i> &nbsp; Create</a>
    <br />
    <br />
<table id="example" class="table" style="width:100%;color:darkgrey">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Date of meeting</th>
                <th></th>

            </tr>
        </thead>
     <tbody>
       
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (@item.Patient.Image == null)
                    {
                        if (@item.Patient.gender == 0)
                        {
                            <div class="Image" style="background-image:url('/files/imgs/men.jpg') ; width:50px ; height:50px ; border-radius : 50%;background-size:cover;margin:auto; background-position:center; background-repeat:no-repeat ;">
                            </div>

                        }
                        else
                        {
                            <div class="Image" style="background-image:url('/files/imgs/young-woman-avatar-cartoon-character-profile-picture-young-woman-wearing-blue-t-shirt-avatar-cartoon-character-vector-149732076.jpg') ; width:50px;margin:auto ; height:50px ; border-radius : 50%;background-size:cover; background-position:center; background-repeat:no-repeat ;">
                            </div>

                        }
                    }
                    else
                    {
                        <div class="Image" style="background-image:url('/files/imgs/@item.Patient.Image') ; width:50px ; height:50px ; border-radius : 50%;background-size:cover;margin:auto; background-position:center; background-repeat:no-repeat ;">
                        </div>
                    }


                </td>
                <td>@item.Patient.FullName</td>
                <td>@item.RecodDate</td>


                <td>
                    <a style="text-decoration:none;padding:5px" class="buttons-check" asp-action="PatientRecord" asp-controller="DoctorHome" asp-route-id="@item.PatientID">Check</a>
                </td>






            </tr>
        }


    </tbody>

</table>
@section DatatablesJS{
    <partial name="~/views/person/Partial/script.cshtml" />

}
  
