@model List<GroupInRoleVM>

@{
    ViewData["Title"] = "AddOrRemoveGroups";
    var RoleId = ViewBag.Id;
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h1>AddOrRemoveGrops</h1>


<form method="post" class="form-group">

    <div class="card-header">
        <h2>Add Or Remove Group In Role</h2>
    </div>


    @for (int i = 0; i < Model.Count; i++)
    {

        <input asp-for="@Model[i].IsSelected" type="checkbox" class="filled-in">
        <label asp-for="@Model[i].IsSelected">@Model[i].Name</label>

        <input type="hidden" asp-for="@Model[i].Id" />
        <input type="hidden" asp-for="@Model[i].Name" />

    }

    <div class="card-footer">
        <input type="submit" value="Edit" class="btn btn-primary" />
    </div>


</form>

<a asp-controller="Roles" asp-action="Edit" asp-route-id="@RoleId">Cancle</a>

@section CSS{
    <partial name="~/views/person/Partial/css.cshtml" />

}
    @section JqueryValidation{
    <partial name="~/views/person/Partial/Script.cshtml" />
}
