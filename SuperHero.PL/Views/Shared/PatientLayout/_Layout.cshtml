@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Person> signInManager
@{
    var userinfo = await signInManager.UserManager.FindByNameAsync(User.Identity.Name);
}
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Super Hero</title>
    <link href="~/Dashboard/Images/Flash.svg" rel="icon">
    <link href="~/dashboard/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    @RenderSection("CSS",required:false)
    <!-- Font Awesome Cdn Link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
    <link href="~/dashboard/userdashboard.css" rel="stylesheet" />
</head>
<body style="background-color: rgb(223, 220, 220);">
    <header>
        <div class="container">
            <div class="navbar">
                <div class="navbar_logo">
                    <h2>super Hero</h2>
                </div>
                <div class="menue_items">
                    <a style=" text-decoration: none;" href="#">Profile</a>
                    <a style=" text-decoration: none;" href="#">Social</a>
                    <a style=" text-decoration: none;" href="#">Problem</a>
                    <a style=" text-decoration: none;" href="#">Course</a>
                    <a style=" text-decoration: none;" href="#">Contact</a>
                </div>
                <div class="navbar_acc">
                    @if (signInManager.IsSignedIn(User))
                    {


                        @if (@userinfo.Image == null)
                        {
                            if (@userinfo.gender == 0)
                            {
                                <img src="/files/imgs/men.jpg" alt="" />
                            }
                            else
                            {

                                <img src="/files/imgs/young-woman-avatar-cartoon-character-profile-picture-young-woman-wearing-blue-t-shirt-avatar-cartoon-character-vector-149732076.jpg" alt="" />
                            }
                        }
                        else
                        {

                            <img src="/files/imgs/@userinfo.Image" style="width:60px;height:60px" alt="" />
                        }
                    }

                </div>
            </div>
        </div>
        <div class="container">
            <div class="hero-section">
                <div class="acc-details">
                   
                    @if (signInManager.IsSignedIn(User))
                    {

                       
                        @if (@userinfo.Image == null)
                        {
                            if (@userinfo.gender == 0)
                            {
                                <img src="/files/imgs/men.jpg" alt="" />
                            }
                            else
                            {

                                <img src="/files/imgs/young-woman-avatar-cartoon-character-profile-picture-young-woman-wearing-blue-t-shirt-avatar-cartoon-character-vector-149732076.jpg" alt="" />
                            }
                        }
                        else
                        {

                            <img src="/files/imgs/@userinfo.Image"  alt="" />
                        }
                    }
                    <div class="acc-txt">
                        <h3>Never Give Up!</h3>
                        <h6>@userinfo.FullName</h6>

                        <p>reason</p>
                    </div>
                </div>
                <div class="updates">
                    <div class="follower">
                        <a style=" text-decoration: none;" class="activ btn-btn-sucess" href="#">Follow</a>
                        <a style=" text-decoration: none;" href="#">send</a>
                    </div>

                </div>
            </div>
        </div>

        <div class="container">
            <div class="Card_Warp">
                <div class="card">
                    <div class="iconheader">
                        <i class="fa-solid fa-share"></i>
                    </div>

                    <div class="info">
                        <i class="fa-solid fa-user-group"></i>
                        <div class="rank">
                            40%
                        </div>
                    </div>
                    <div class="detail">
                        <span>Total amount</span>
                        <h2>200 <span> Following</span> </h2>
                    </div>
                </div>
                <div class="card">
                    <div class="iconheader">
                        <i class="fa-solid fa-thumbtack"></i>
                    </div>
                    <div class="info">
                        <i class="fa-solid fa-photo-film"></i>
                        <div class="rank">
                            30
                        </div>
                    </div>
                    <div class="detail">
                        <span>Total amount</span>
                        <h2>30 <span>Post</span> </h2>
                    </div>
                </div>

                <div class="card">
                    <div class="iconheader">
                        <i class="fa-solid fa-share fa-flip-horizontal"></i>
                    </div>
                    <div class="info">
                        <i class="fa-solid fa-users"></i>
                        <div class="rank">
                            60%
                        </div>
                    </div>
                    <div class="detail">
                        <span>Total amount</span>
                        <h2>400 <span>Follower</span> </h2>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!--Post Content-->
    <section class="content">
        <div class="container">
            @RenderBody()
        </div>

    </section>
    <script src="~/dashboard/lib/jquery/jquery.min.js"></script>
    <script src="~/dashboard/lib/bootstrap/js/bootstrap.min.js"></script>

    @RenderSection("DatatablesJS",required:false)
    @RenderSection("JS",required:false)
    @RenderSection("JqueryValidation",required:false)
  

</body>
</html>