@model PersonVM
@{
    ViewData["Title"] = "Doctor";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<div class="card shadow-sm">

    <div class="card-header">
        <h3 class="card-title">Edite Doctor</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-5">
                <a>@TempData["error"]</a>
                <div asp-validation-summary="All"></div>
                <form method="post" asp-controller="Doctor" asp-action="Edite" enctype="multipart/form-data">

                    <div class="mb-5">
                        <div class="form-floating mb-2">
                            <input type="text" class="form-control" placeholder="Name" asp-for="FullName" />
                            <label>Full Name</label>
                        </div>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="mb-5">
                        <div class="form-floating mb-2">
                            <input type="text" class="form-control" placeholder="Email" asp-for="Email" />
                            <label asp-for="Email"></label>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-5">
                        <div class="form-floating mb-2">
                            <input type="Name" class="form-control" placeholder="ClinicName" asp-for="doctor.ClinicName" />
                            <label>Clinic</label>
                        </div>
                        <span asp-validation-for="doctor.ClinicName" class="text-danger"></span>
                    </div>

                    <div class="mb-5">
                        <div class="form-floating mb-2">
                            <input type="Name" class="form-control" placeholder="ClinicAdress" asp-for="doctor.ClinicAdress" />
                            <label>Doctor Clinic</label>
                        </div>
                        <span asp-validation-for="doctor.ClinicAdress" class="text-danger"></span>
                    </div>

                    <div class="mb-5">
                        <div class="form-floating mb-2">
                            <input type="file" class="form-control" placeholder="ClinicAdress" asp-for="doctor.Cv_Name" />
                            <label>CV</label>
                        </div>
                        <span asp-validation-for="doctor.Cv_Name" class="text-danger"></span>
                    </div>
                    <br />
                    
                   <label asp-for="ImageName" class="file-upload">
                      <input asp-for="ImageName" class="input" type="file" multiple accept="image/*, video/*" />
                      <span asp-for="ImageName" class="file-upload_button"><label asp-for="ImageName"></label><i class="uil uil-camera-plus"></i></span>
                   </label>
                      <output class="file-upload_result"></output>
                    <br />
                    <div class="mb-5">
                        <div class="form-floating mb-2">
                            <select asp-for="gender" class="form-select" aria-label="Default select example">
                                <option>Gender</option>
                                <option value="0">Male</option>
                                <option value="1">Female</option>
                            </select>
                        </div>

                    </div>


                    <br />

                    <center>
                        <button type="submit" class="btn btn-primary">
                            <i class="uil uil-check"></i>Save
                        </button>

                        <a asp-action="GetAll" asp-controller="Person" class="btn btn-danger">return</a>
                    </center>



                </form>
            </div>
            <div class="col-md-1">
            </div>
            <div class="col-6">

                @if (@Model.Image == null)
                {
                    if (@Model.gender == 0)
                    {
                        <div class="Image" style="background-image:url('/files/imgs/men.jpg') ;margin:auto; width:400px ; height:400px ; border-radius : 50%;background-size:cover; background-position:center; background-repeat:no-repeat ;">
                        </div>

                    }
                    else
                    {
                        <div class="Image" style="background-image:url('/files/imgs/young-woman-avatar-cartoon-character-profile-picture-young-woman-wearing-blue-t-shirt-avatar-cartoon-character-vector-149732076.jpg');margin:auto ; width:400px ; height:400px; border-radius : 50%;background-size:cover; background-position:center; background-repeat:no-repeat ;">
                        </div>

                    }
                }
                else
                {
                    <div style="background-image:url('/files/imgs/@Model.Image')  ; height:500px ;width:100%; background-position:center; border-radius : 50%; background-size: cover;margin:auto; background-repeat:no-repeat ;">
                    </div>


                }
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <span class="font-weight-bold">@Model.FullName</span>
                    <span class="text-black-50">@Model.Email</span>
                    <span> </span>
                </div>
            </div>
        </div>
    </div>
</div>

@section CSS{
    <partial name="~/views/person/Partial/css.cshtml" />

}
    @section JqueryValidation{
    <partial name="~/views/person/Partial/Script.cshtml" />
}