@model IEnumerable< CourseVM>
@{
    ViewData["Title"] = "Course";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}


@foreach (var item in Model)
{
   
      <div class="row m-5 ">
       
        <div class="col-sm-12 ">
            
            <div class="row Ads" style="opacity: .8;background-position: left;background-repeat: no-repeat;background-image: url('/Files/Courses/@item.Image');">
                <div class="cover"></div>
                <div class="col-lg-6 image" >
                    @if(item.Lessons.Count() ==0){
                         <a class="play" ><img src="~/Course/Images/play-button-icon-png-16.png"></a>
                    
                    }else{
                        <a class="play" asp-action="MyCourse" asp-controller="CourseView" asp-route-id="@item.ID"><img src="~/Course/Images/play-button-icon-png-16.png"></a>

                    }
                   
                    
                    </div>
                    <div class="col-sm-6 conntent Ads">
                        
                        <br>
                       <h1 class="mt-3">Name Of Course</h1>
                       <h4 class="fw-bold">Name Trainer</h4>
                       <h4>Cayegory Name</h4>
                       <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Alias culpa, nisi ratione corrupti voluptate id incidunt necessitatibus officia totam voluptatem asperiores quae, perferendis architecto sed facilis! Ipsa ea sapiente molestiae?</p>
                       <div class="progress-bg">
                        <div class="progress-bar" style="width: 70%;">
                            <h5 class="raised">Lesson </h5>
                        </div>
                            
                            <h4 class="goal">70%</h4>
                    </div>
                    <br>
                    
                    </div>
            </div>
           
        </div>
       

    </div>
    <br>
}
