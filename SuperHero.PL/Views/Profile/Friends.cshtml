@model IEnumerable<Friends>
@inject IServiesRep servies;
@inject SignInManager<Person> signInManager
@{

    var userinfo = await signInManager.UserManager.FindByNameAsync(User.Identity.Name);


}

<div style="background:#363636b4; color:white" class="row">
    <div class="col-md-12">
        <div class="people-nearby">
            @foreach (var item in Model)
            {
                var user = await servies.GetPersonInclud("district", item.FriendId);
                var Friend = await servies.GetBYUserFriends(userinfo.Id, user.Id);
                <div class="nearby-user">
                    <div class="row p-3">
                        <div class="col-md-1 col-sm-1 pt-4">
                            <a asp-action="Profile" asp-controller="Profile" asp-route-id="@user.Id"><img style=" height: 50px;width: 50px;border-radius: 50%;" src="/Files/Imgs/@(user.Image == null ?(user.gender == 0 ? "men.jpg" : "young-woman-avatar-cartoon-character-profile-picture-young-woman-wearing-blue-t-shirt-avatar-cartoon-character-vector-149732076.jpg") : $"{@user.Image}")" alt="user" class="profile-photo-lg"></a>
                        </div>
                        <div class="col-md-7 col-sm-7 pt-5">
                            <h5><a asp-action="Profile" asp-controller="Profile" asp-route-id="@user.Id" class="profile-link">@user.FullName</a></h5>
                            <p>@user.PersonType</p>
                           
                        </div>

                       
                        
                    </div>
                </div>
                <hr>
            }
           
        </div>
    </div>
</div>
       